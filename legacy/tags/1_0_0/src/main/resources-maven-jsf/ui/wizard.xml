<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE component SYSTEM "../misc/component.dtd" [
<!ENTITY standard_uicomponent_attributes		SYSTEM "../entities/standard_uicomponent_attributes.xml">
<!ENTITY widget_var_attribute					SYSTEM "../entities/widget_var_attribute.xml">
]>
<component>
	<tag>wizard</tag>
	<tagClass>org.primefaces.component.wizard.WizardTag</tagClass>
	<componentClass>org.primefaces.component.wizard.Wizard</componentClass>
	<componentType>org.primefaces.component.Wizard</componentType>
	<componentFamily>org.primefaces.component</componentFamily>
	<rendererType>org.primefaces.component.WizardRenderer</rendererType>
	<rendererClass>org.primefaces.component.wizard.WizardRenderer</rendererClass>
	<parent>org.primefaces.component.wizard.UIWizard</parent>
	<ajaxComponent>true</ajaxComponent>
	<attributes>
		&standard_uicomponent_attributes;
		&widget_var_attribute;
		<attribute>
			<name>step</name>
			<required>false</required>
			<type>java.lang.Integer</type>
			<defaultValue>0</defaultValue>
			<description>Index of the current step in flow</description>
		</attribute>
		<attribute>
			<name>effect</name>
			<required>true</required>
			<type>java.lang.String</type>
			<defaultValue>slide</defaultValue>
			<description>
				Effect to be used for switching, "slide" or "toggle".
			</description>
		</attribute>
		<attribute>
			<name>width</name>
			<required>true</required>
			<type>java.lang.Integer</type>
			<defaultValue>400</defaultValue>
			<description>
				Width of the viewport in pixels
			</description>
		</attribute>
		<attribute>
			<name>height</name>
			<required>true</required>
			<type>java.lang.Integer</type>
			<defaultValue>400</defaultValue>
			<description>
				Height of the viewport in pixels
			</description>
		</attribute>
		<attribute>
			<name>style</name>
			<required>false</required>
			<type>java.lang.String</type>
			<description>Style of the main wizard container</description>
		</attribute>
		<attribute>
			<name>styleClass</name>
			<required>false</required>
			<type>java.lang.String</type>
			<description>StyleClass of the main wizard container</description>
		</attribute>
		<attribute>
			<name>speed</name>
			<required>false</required>
			<type>java.lang.Integer</type>
			<defaultValue>500</defaultValue>
			<description>Speed of animation in ms.</description>
		</attribute>
		<attribute>
			<name>customUI</name>
			<required>false</required>
			<type>java.lang.Boolean</type>
			<defaultValue>false</defaultValue>
			<description>When customUI is turned on, navigational controls won't be rendered and page authors can create their own ui using client side api.</description>
		</attribute>
	</attributes>
	<resources>
		<resource>
			<name>/primefaces/wizard/assets/wizard.css</name>
		</resource>
		<resource>
			<name>/yui/utilities/utilities.js</name>
		</resource>
		<resource>
			<name>/jquery/jquery.js</name>
		</resource>
		<resource>
			<name>/jquery/plugins/tabswitch/tabswitch.js</name>
		</resource>
		<resource>
			<name>/primefaces/core/core.js</name>
		</resource>
		<resource>
			<name>/primefaces/wizard/wizard.js</name>
		</resource>
	</resources>
</component>