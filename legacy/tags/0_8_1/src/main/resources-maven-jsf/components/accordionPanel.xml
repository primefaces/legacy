<!DOCTYPE component SYSTEM "../misc/component.dtd" [
<!ENTITY standard_uicomponent_attributes		SYSTEM "../entities/standard_uicomponent_attributes.xml">
<!ENTITY widget_var_attribute					SYSTEM "../entities/widget_var_attribute.xml">
]>
<component>
	<tag>accordionPanel</tag>
	<tagClass>org.primefaces.ui.component.accordionpanel.AccordionPanelTag</tagClass>
	<componentClass>org.primefaces.ui.component.accordionpanel.AccordionPanel</componentClass>
	<componentType>org.primefaces.ui.AccordionPanel</componentType>
	<componentFamily>org.primefaces</componentFamily>
	<rendererType>org.primefaces.ui.component.AccordionPanelRenderer</rendererType>
	<rendererClass>org.primefaces.ui.component.accordionpanel.AccordionPanelRenderer</rendererClass>
	<parent>javax.faces.component.UIPanel</parent>
	<attributes>
		&standard_uicomponent_attributes;
		<attribute>
			<name>styleClass</name>
			<required>false</required>
			<type>java.lang.String</type>
			<description>Style class of the root container of accordion panel</description>
		</attribute>
		<attribute>
			<name>multipleSelection</name>
			<required>false</required>
			<type>java.lang.Boolean</type>
			<defaultValue>false</defaultValue>
			<description>Enables toggling of multiple tabs</description>
		</attribute>
		<attribute>
			<name>speed</name>
			<required>false</required>
			<type>java.lang.String</type>
			<defaultValue>fast</defaultValue>
			<description>slow|fast, Speed of the toggle animation</description>
		</attribute>
		<attribute>
			<name>rollover</name>
			<required>false</required>
			<type>java.lang.Boolean</type>
			<defaultValue>false</defaultValue>
			<description>If set to true, toggling will happen when mouse rollovers the tab header</description>
		</attribute>
		<attribute>
			<name>fade</name>
			<required>false</required>
			<type>java.lang.Boolean</type>
			<defaultValue>true</defaultValue>
			<description>Specifies the fade animation, turned on by default</description>
		</attribute>
		<attribute>
			<name>bounceOut</name>
			<required>false</required>
			<type>java.lang.Boolean</type>
			<defaultValue>false</defaultValue>
			<description>Specifies the bounceOut animation, turned off by default</description>
		</attribute>
	</attributes>
	<resources>
		<resource>
			<name>/yui/container/assets/skins/sam/container.css</name>
		</resource>
		<resource>
			<name>/yuiext/accordionpanel/assets/skins/sam/accordion.css</name>
		</resource>
		<resource>
			<name>/yui/utilities/utilities.js</name>
		</resource>
		<resource>
			<name>/yuiext/accordionpanel/bubbling.js</name>
		</resource>
		<resource>
			<name>/yuiext/accordionpanel/accordion.js</name>
		</resource>
		<resource>
			<name>/yuiext/accordionpanel/primeAccordion.js</name>
		</resource>
	</resources>
</component>