<!DOCTYPE component SYSTEM "../misc/component.dtd" [
<!ENTITY standard_uicomponent_attributes		SYSTEM "../entities/standard_uicomponent_attributes.xml">
<!ENTITY output_component_attributes			SYSTEM "../entities/output_component_attributes.xml">
<!ENTITY input_component_attributes				SYSTEM "../entities/input_component_attributes.xml">
<!ENTITY widget_var_attribute					SYSTEM "../entities/widget_var_attribute.xml">
]>
<component>
	<tag>captcha</tag>
	<tagClass>org.primefaces.ui.component.captcha.CaptchaTag</tagClass>
	<componentClass>org.primefaces.ui.component.captcha.Captcha</componentClass>
	<componentType>org.primefaces.ui.Captcha</componentType>
	<componentFamily>org.primefaces</componentFamily>
	<rendererType>org.primefaces.ui.component.CaptchaRenderer</rendererType>
	<rendererClass>org.primefaces.ui.component.captcha.CaptchaRenderer</rendererClass>
	<parent>javax.faces.component.UIInput</parent>
	<attributes>
		&input_component_attributes;
		<attribute>
			<name>publicKey</name>
			<required>false</required>
			<type>java.lang.String</type>
			<description>Public recaptcha key for a specific domain</description>
		</attribute>
		<attribute>
			<name>theme</name>
			<required>false</required>
			<type>java.lang.String</type>
			<defaultValue>red</defaultValue>
			<description>Theme of the captcha, valid values are "red","white","blackglass", "clean" and "custom"</description>
		</attribute>
		<attribute>
			<name>language</name>
			<required>false</required>
			<type>java.lang.String</type>
			<defaultValue>en</defaultValue>
			<description>Key of the supported languages, default is "en"</description>
		</attribute>
	</attributes>
</component>