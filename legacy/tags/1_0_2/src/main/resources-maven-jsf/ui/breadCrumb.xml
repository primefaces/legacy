<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE component SYSTEM "../misc/component.dtd" [
<!ENTITY standard_uicomponent_attributes		SYSTEM "../entities/standard_uicomponent_attributes.xml">
<!ENTITY container_component_attributes			SYSTEM "../entities/container_attributes.xml">
<!ENTITY widget_var_attribute					SYSTEM "../entities/widget_var_attribute.xml">
]>
<component>
	<tag>breadCrumb</tag>
	<tagClass>org.primefaces.component.breadcrumb.BreadCrumbTag</tagClass>
	<componentClass>org.primefaces.component.breadcrumb.BreadCrumb</componentClass>
	<componentType>org.primefaces.component.BreadCrumb</componentType>
	<componentFamily>org.primefaces.component</componentFamily>
	<rendererType>org.primefaces.component.BreadCrumbRenderer</rendererType>
	<rendererClass>org.primefaces.component.breadcrumb.BreadCrumbRenderer</rendererClass>
	<parent>org.primefaces.component.menu.AbstractMenu</parent>
	<attributes>
		&standard_uicomponent_attributes;
		<attribute>
			<name>model</name>
			<required>false</required>
			<type>org.primefaces.model.MenuModel</type>
			<description>
				An org.primefaces.model.MenuModel instance to build menu dynamically.
			</description>
		</attribute>
		<attribute>
			<name>expandedEndItems</name>
			<required>false</required>
			<type>java.lang.Integer</type>
			<defaultValue>1</defaultValue>
			<description>Number of expanded menuitems at end.</description>
		</attribute>
		<attribute>
			<name>expandedBeginningItems</name>
			<required>false</required>
			<type>java.lang.Integer</type>
			<defaultValue>1</defaultValue>
			<description>Number of expanded menuitems at beginning.</description>
		</attribute>
		<attribute>
			<name>expandEffectDuration</name>
			<required>false</required>
			<type>java.lang.Integer</type>
			<defaultValue>800</defaultValue>
			<description>Expand effect duration in milliseconds.</description>
		</attribute>
		<attribute>
			<name>collapseEffectDuration</name>
			<required>false</required>
			<type>java.lang.Integer</type>
			<defaultValue>500</defaultValue>
			<description>Collapse effect duration in milliseconds.</description>
		</attribute>
		<attribute>
			<name>initialCollapseEffectDuration</name>
			<required>false</required>
			<type>java.lang.Integer</type>
			<defaultValue>600</defaultValue>
			<description>Initial collapse effect duration in milliseconds.</description>
		</attribute>
		<attribute>
			<name>previewWidth</name>
			<required>false</required>
			<type>java.lang.Integer</type>
			<defaultValue>5</defaultValue>
			<description>Preview width of a collapsed menuitem.</description>
		</attribute>
		<attribute>
			<name>preview</name>
			<required>false</required>
			<type>java.lang.Boolean</type>
			<defaultValue>false</defaultValue>
			<description>Specifies preview mode, when set to false menuitems will not collapse.</description>
		</attribute>
		<attribute>
			<name>style</name>
			<required>false</required>
			<type>java.lang.String</type>
			<description>Style of the main container element.</description>
		</attribute>
		<attribute>
			<name>styleClass</name>
			<required>false</required>
			<type>java.lang.String</type>
			<description>Style class of the main container element.</description>
		</attribute>
	</attributes>
	<resources>
		<resource>
			<name>/jquery/plugins/breadcrumb/breadcrumb.css</name>
		</resource>
		<resource>
			<name>/yui/utilities/utilities.js</name>
		</resource>
		<resource>
			<name>/jquery/jquery.js</name>
		</resource>
		<resource>
			<name>/primefaces/core/core.js</name>
		</resource>
		<resource>
			<name>/jquery/plugins/breadcrumb/jBreadCrumb.1.1.js</name>
		</resource>
	</resources>
</component>
