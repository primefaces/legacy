<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE component SYSTEM "../misc/component.dtd" [
<!ENTITY standard_uicomponent_attributes		SYSTEM "../entities/standard_uicomponent_attributes.xml">
<!ENTITY output_component_attributes			SYSTEM "../entities/output_component_attributes.xml">
<!ENTITY input_component_attributes				SYSTEM "../entities/input_component_attributes.xml">
<!ENTITY html_input_text_attributes				SYSTEM "../entities/html_input_text_attributes.xml">
<!ENTITY widget_var_attribute					SYSTEM "../entities/widget_var_attribute.xml">
]>
<component>
	<tag>spinner</tag>
	<tagClass>org.primefaces.component.spinner.SpinnerTag</tagClass>
	<componentClass>org.primefaces.component.spinner.Spinner</componentClass>
	<componentType>org.primefaces.component.Spinner</componentType>
	<componentFamily>org.primefaces.component</componentFamily>
	<rendererType>org.primefaces.component.SpinnerRenderer</rendererType>
	<rendererClass>org.primefaces.component.spinner.SpinnerRenderer</rendererClass>
	<parent>javax.faces.component.UIInput</parent>
	<attributes>
		&input_component_attributes;
		&html_input_text_attributes;
		<attribute>
			<name>stepFactor</name>
			<required>false</required>
			<type>java.lang.Double</type>
			<defaultValue>1.0</defaultValue>
			<description>Stepping factor for each increment and decrement</description>
		</attribute>
		<attribute>
			<name>min</name>
			<required>false</required>
			<type>java.lang.Double</type>
			<defaultValue>java.lang.Double.MIN_VALUE</defaultValue>
			<description>Minimum boundary value</description>
		</attribute>
		<attribute>
			<name>max</name>
			<required>false</required>
			<type>java.lang.Double</type>
			<defaultValue>java.lang.Double.MAX_VALUE</defaultValue>
			<description>Maximum boundary value</description>
		</attribute>
		<attribute>
			<name>prefix</name>
			<required>false</required>
			<type>java.lang.String</type>
			<description>Prefix of the input text</description>
		</attribute>
		<attribute>
			<name>suffix</name>
			<required>false</required>
			<type>java.lang.String</type>
			<description>Suffix of the input text</description>
		</attribute>
		<attribute>
			<name>showOn</name>
			<required>false</required>
			<type>java.lang.String</type>
			<description>Defines when spinner buttons would be available</description>
		</attribute>
		<attribute>
			<name>width</name>
			<required>false</required>
			<type>java.lang.Integer</type>
			<defaultValue>java.lang.Integer.MIN_VALUE</defaultValue>
			<description>Defines the width of the buttons</description>
		</attribute>
	</attributes>
	<resources>
		<resource>
			<name>/jquery/themes/cupertino/cupertino.css</name>
		</resource>
		<resource>
			<name>/jquery/plugins/spinner/ui.spinner.css</name>
		</resource>
		<resource>
			<name>/yui/utilities/utilities.js</name>
		</resource>
		<resource>
			<name>/jquery/jquery.js</name>
		</resource>
		<resource>
			<name>/jquery/plugins/ui/jquery.ui.custom.js</name>
		</resource>
		<resource>
			<name>/jquery/plugins/spinner/ui.spinner.min.js</name>
		</resource>
		<resource>
			<name>/primefaces/core/core.js</name>
		</resource>
	</resources>
</component>
