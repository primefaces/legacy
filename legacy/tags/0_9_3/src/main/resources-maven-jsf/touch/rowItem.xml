<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE component SYSTEM "../misc/component.dtd" [
<!ENTITY standard_uicomponent_attributes SYSTEM "../entities/standard_uicomponent_attributes.xml">
<!ENTITY command_component_attributes			SYSTEM "../entities/command_component_attributes.xml">
]>
<component>
	<tag>rowItem</tag>
	<tagClass>org.primefaces.ui.touch.component.rowitem.RowItemTag</tagClass>
	<componentClass>org.primefaces.ui.touch.component.rowitem.RowItem</componentClass>
	<componentType>org.primefaces.ui.touch.RowItem</componentType>
	<componentFamily>org.primefaces.ui.touch</componentFamily>
	<rendererType>org.primefaces.ui.touch.component.RowItemRenderer</rendererType>
	<rendererClass>org.primefaces.ui.touch.component.rowitem.RowItemRenderer</rendererClass>
	<parent>javax.faces.component.UICommand</parent>
	<attributes>
		&standard_uicomponent_attributes;
		<attribute>
			<name>view</name>
			<required>false</required>
			<type>java.lang.String</type>
			<description>Id of the view to be displayed when this item is clicked.</description>
		</attribute>
		<attribute>
			<name>url</name>
			<required>true</required>
			<type>java.lang.String</type>
			<description>
				Optional URL of the item to be used for external navigation.
			</description>
		</attribute>
		<attribute>
			<name>update</name>
			<required>false</required>
			<type>java.lang.String</type>
			<description>
				Client side id of the component(s) to be updated after async partial submit request.
			</description>
		</attribute>
	</attributes>
	<resources>
		<resource>
			<name>/yui/utilities/utilities.js</name>
		</resource>
		<resource>
			<name>/jquery/jquery.js</name>
		</resource>
		<resource>
			<name>/primefaces/ajax/ajax.js</name>
		</resource>
	</resources>
</component>