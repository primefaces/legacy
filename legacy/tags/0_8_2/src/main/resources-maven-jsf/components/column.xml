<!DOCTYPE component SYSTEM "../misc/component.dtd" [
<!ENTITY standard_uicomponent_attributes		SYSTEM "../entities/standard_uicomponent_attributes.xml">
]>
<component>
	<tag>column</tag>
	<tagClass>org.primefaces.ui.component.datatable.ColumnTag</tagClass>
	<componentClass>org.primefaces.ui.component.datatable.Column</componentClass>
	<componentType>org.primefaces.ui.Column</componentType>
	<componentFamily>org.primefaces</componentFamily>
	<parent>javax.faces.component.UIColumn</parent>
	<attributes>
		&standard_uicomponent_attributes;
		<attribute>
			<name>sortable</name>
			<required>false</required>
			<type>java.lang.Boolean</type>
			<defaultValue>false</defaultValue>
			<description>Boolean value that makes the column sortable when true, default is false</description>
		</attribute>
		<attribute>
			<name>resizeable</name>
			<required>false</required>
			<type>java.lang.Boolean</type>
			<defaultValue>false</defaultValue>
			<description>Boolean to make the column width resizeable, default is false</description>
		</attribute>
	</attributes>
</component>
