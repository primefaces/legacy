<!DOCTYPE component SYSTEM "../misc/component.dtd" [
<!ENTITY standard_uicomponent_attributes		SYSTEM "../entities/standard_uicomponent_attributes.xml">
<!ENTITY widget_var_attribute					SYSTEM "../entities/widget_var_attribute.xml">
]>
<component>
	<tag>effect</tag>
	<tagClass>org.primefaces.ui.component.effect.EffectTag</tagClass>
	<componentClass>org.primefaces.ui.component.effect.Effect</componentClass>
	<componentType>org.primefaces.ui.Effect</componentType>
	<componentFamily>org.primefaces.ui</componentFamily>
	<rendererType>org.primefaces.ui.component.EffectRenderer</rendererType>
	<rendererClass>org.primefaces.ui.component.effect.EffectRenderer</rendererClass>
	<parent>javax.faces.component.UIComponentBase</parent>
	<attributes>
		&standard_uicomponent_attributes;
		<attribute>
			<name>event</name>
			<required>true</required>
			<type>java.lang.String</type>
			<description>Dom event to attach the event that executes the animation</description>
		</attribute>
		<attribute>
			<name>type</name>
			<required>true</required>
			<type>java.lang.String</type>
			<description>Specifies the name of the animation</description>
		</attribute>
		<attribute>
			<name>for</name>
			<required>false</required>
			<type>java.lang.String</type>
			<description>The component that is animated</description>
		</attribute>
	</attributes>
	<resources>
		<resource>
			<name>/prototype/prototype.js</name>
		</resource>
		<resource>
			<name>/scriptaculous/scriptaculous.js</name>
		</resource>
		<resource>
			<name>/scriptaculous/effects.js</name>
		</resource>
	</resources>
</component>