<!DOCTYPE component SYSTEM "../misc/component.dtd" [
<!ENTITY standard_uicomponent_attributes		SYSTEM "../entities/standard_uicomponent_attributes.xml">
<!ENTITY widget_var_attribute					SYSTEM "../entities/widget_var_attribute.xml">
]>
<component>
	<tag>resizable</tag>
	<tagClass>org.primefaces.ui.component.resizable.ResizableTag</tagClass>
	<componentClass>org.primefaces.ui.component.resizable.Resizable</componentClass>
	<componentType>org.primefaces.ui.Resizable</componentType>
	<componentFamily>org.primefaces</componentFamily>
	<rendererType>org.primefaces.ui.component.ResizableRenderer</rendererType>
	<rendererClass>org.primefaces.ui.component.resizable.ResizableRenderer</rendererClass>
	<parent>javax.faces.component.UIComponentBase</parent>
	<attributes>
		&standard_uicomponent_attributes;
		&widget_var_attribute;

		<attribute>
			<name>proxy</name>
			<required>false</required>
			<type>java.lang.Boolean</type>
			<defaultValue>false</defaultValue>
			<description>Makes the resizable use a proxy</description>
		</attribute>
		<attribute>
			<name>status</name>
			<required>false</required>
			<type>java.lang.Boolean</type>
			<defaultValue>false</defaultValue>
			<description>Shows the height and width of the resizing component</description>
		</attribute>
		<attribute>
			<name>handles</name>
			<required>false</required>
			<type>java.lang.String</type>
			<description>Handles to use, any combination of 't', 'b', 'r', 'l', 'bl', 'br', 'tl', 'tr' is valid, shortcut "all" enables all handlers.</description>
		</attribute>
		<attribute>
			<name>ghost</name>
			<required>false</required>
			<type>java.lang.Boolean</type>
			<defaultValue>false</defaultValue>
			<description>Displays a ghost effect.</description>
		</attribute>
		<attribute>
			<name>knobHandles</name>
			<required>false</required>
			<type>java.lang.Boolean</type>
			<defaultValue>false</defaultValue>
			<description>Displays smaller handles</description>
		</attribute>
		<attribute>
			<name>animate</name>
			<required>false</required>
			<type>java.lang.Boolean</type>
			<defaultValue>false</defaultValue>
			<description>Displays a ghost effect.</description>
		</attribute>
		<attribute>
			<name>effect</name>
			<required>false</required>
			<type>java.lang.String</type>
			<description>Animation effect.</description>
		</attribute>
		<attribute>
			<name>animateDuration</name>
			<required>false</required>
			<type>java.lang.Double</type>
			<defaultValue>0.75</defaultValue>
			<description>Duration of the animation.</description>
		</attribute>
	</attributes>
	<resources>
		<resource>
			<name>/yui/assets/skins/sam/resize.css</name>
		</resource>
		<resource>
			<name>/yui/utilities/utilities.js</name>
		</resource>
		<resource>
			<name>/yui/resize/resize-min.js</name>
		</resource>
	</resources>
</component>
