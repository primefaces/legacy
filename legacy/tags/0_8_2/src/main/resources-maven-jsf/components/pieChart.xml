<!DOCTYPE component SYSTEM "../misc/component.dtd" [
<!ENTITY standard_uicomponent_attributes		SYSTEM "../entities/standard_uicomponent_attributes.xml">
<!ENTITY widget_var_attribute					SYSTEM "../entities/widget_var_attribute.xml">
]>
<component>
	<tag>pieChart</tag>
	<tagClass>org.primefaces.ui.component.chart.pie.PieChartTag</tagClass>
	<componentHandlerClass>org.primefaces.ui.component.chart.ChartHandler</componentHandlerClass>
	<componentClass>org.primefaces.ui.component.chart.pie.PieChart</componentClass>
	<componentType>org.primefaces.ui.chart.PieChart</componentType>
	<componentFamily>org.primefaces</componentFamily>
	<rendererType>org.primefaces.ui.component.chart.PieChartRenderer</rendererType>
	<rendererClass>org.primefaces.ui.component.chart.pie.PieChartRenderer</rendererClass>
	<parent>org.primefaces.ui.component.chart.UIChart</parent>
	<ajaxComponent>true</ajaxComponent>
	<attributes>
		&standard_uicomponent_attributes;
		<attribute>
			<name>widgetVar</name>
			<required>false</required>
			<type>java.lang.String</type>
			<ignoreInComponent>true</ignoreInComponent>
			<description>
				Javascript variable name of the wrapped yui widget 
			</description>
		</attribute>
		<attribute>
			<name>value</name>
			<required>true</required>
			<type>java.lang.Object</type>
			<ignoreInComponent>true</ignoreInComponent>
			<description>Data to be displayed on the chart</description>
		</attribute>
		<attribute>
			<name>var</name>
			<required>true</required>
			<type>java.lang.String</type>
			<ignoreInComponent>true</ignoreInComponent>
			<literal>true</literal>
			<description>Name of the data iterator</description>
		</attribute>
		<attribute>
			<name>categoryField</name>
			<required>false</required>
			<type>java.lang.Object</type>
			<description>Pie category field</description>
		</attribute>
		<attribute>
			<name>dataField</name>
			<required>false</required>
			<type>java.lang.Object</type>
			<description>Pie category date field</description>
		</attribute>
		<attribute>
			<name>styleClass</name>
			<required>false</required>
			<type>java.lang.String</type>
			<ignoreInComponent>true</ignoreInComponent>
			<description>Style class to apply to chart container element.</description>
		</attribute>
		<attribute>
			<name>style</name>
			<required>false</required>
			<type>java.lang.String</type>
			<ignoreInComponent>true</ignoreInComponent>
			<description>Javascript object that represents the chart style</description>
		</attribute>
		<attribute>
			<name>wmode</name>
			<required>false</required>
			<type>java.lang.String</type>
			<ignoreInComponent>true</ignoreInComponent>
			<description>
				wmode property of the flash object.
			</description>
		</attribute>
		<attribute>
			<name>live</name>
			<required>false</required>
			<type>java.lang.Boolean</type>
			<defaultValue>false</defaultValue>
			<ignoreInComponent>true</ignoreInComponent>
			<description>When a chart is live, the data is refreshed based on the refreshInterval</description>
		</attribute>
		<attribute>
			<name>refreshInterval</name>
			<required>false</required>
			<type>java.lang.Integer</type>
			<defaultValue>3000</defaultValue>
			<ignoreInComponent>true</ignoreInComponent>
			<description>Refresh period of a live chart data in milliseconds</description>
		</attribute>
		<attribute>
			<name>update</name>
			<required>false</required>
			<type>java.lang.String</type>
			<ignoreInComponent>true</ignoreInComponent>
			<description>
				Client side id of the component(s) to be updated after async partial submit request.
			</description>
		</attribute>
		<attribute>
			<name>oncomplete</name>
			<required>false</required>
			<type>java.lang.String</type>
			<ignoreInComponent>true</ignoreInComponent>
			<description>
				Javascript event to be called when ajax request for item select event is completed.
			</description>
		</attribute>
		<attribute>
			<name>itemSelectListener</name>
			<required>false</required>
			<type>javax.el.MethodExpression</type>
			<ignoreInComponent>true</ignoreInComponent>
			<method-signature>void itemSelectListener(org.primefaces.ui.event.chart.ItemSelectEvent)</method-signature>
			<description>Method expression to listen chart series item select events</description>
		</attribute>
	</attributes>
	<resources>
		<resource>
			<name>/yui/utilities/utilities.js</name>
		</resource>
		<resource>
			<name>/yui/datasource/datasource-min.js</name>
		</resource>
		<resource>
			<name>/yui/json/json-min.js</name>
		</resource>
		<resource>
			<name>/yui/cookie/cookie-min.js</name>
		</resource>
		<resource>
			<name>/yui/charts/charts-experimental-min.js</name>
		</resource>
		<resource>
			<name>/prototype/prototype.js</name>
		</resource>
		<resource>
			<name>/primefaces/ajax/ajax.js</name>
		</resource>
		<resource>
			<name>/yuiext/charts/charts.js</name>
		</resource>
	</resources>
</component>