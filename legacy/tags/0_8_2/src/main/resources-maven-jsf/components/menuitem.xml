<!DOCTYPE component SYSTEM "../misc/component.dtd" [
<!ENTITY standard_uicomponent_attributes		SYSTEM "../entities/standard_uicomponent_attributes.xml">
]>
<component>
	<tag>menuitem</tag>
	<tagClass>org.primefaces.ui.component.menuitem.MenuItemTag</tagClass>
	<componentClass>org.primefaces.ui.component.menuitem.MenuItem</componentClass>
	<componentType>org.primefaces.ui.MenuItem</componentType>
	<componentFamily>org.primefaces</componentFamily>
	<parent>javax.faces.component.UIComponentBase</parent>
	<attributes>
		&standard_uicomponent_attributes;
		<attribute>
			<name>label</name>
			<required>true</required>
			<type>java.lang.String</type>
			<description>Menuitem label to be displayed</description>
		</attribute>
		<attribute>
			<name>url</name>
			<required>false</required>
			<type>java.lang.String</type>
			<description>URL that will be navigated to when the menu item is selected</description>
		</attribute>
		<attribute>
			<name>target</name>
			<required>false</required>
			<type>java.lang.String</type>
			<description>Target element of the submenu's anchor element</description>
		</attribute>
	</attributes>
</component>
