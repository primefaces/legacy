<!DOCTYPE component SYSTEM "../misc/component.dtd" [
<!ENTITY standard_uicomponent_attributes		SYSTEM "../entities/standard_uicomponent_attributes.xml">
<!ENTITY output_component_attributes			SYSTEM "../entities/output_component_attributes.xml">
<!ENTITY input_component_attributes				SYSTEM "../entities/input_component_attributes.xml">
<!ENTITY widget_var_attribute					SYSTEM "../entities/widget_var_attribute.xml">
]>
<component>
	<tag>colorPicker</tag>
	<tagClass>org.primefaces.ui.component.colorpicker.ColorPickerTag</tagClass>
	<componentClass>org.primefaces.ui.component.colorpicker.ColorPicker</componentClass>
	<componentType>org.primefaces.ui.ColorPicker</componentType>
	<componentFamily>org.primefaces.ui.component.ColorPicker</componentFamily>
	<rendererType>corg.primefaces.ui.component.ColorPickerRenderer</rendererType>
	<rendererClass>org.primefaces.ui.component.colorpicker.ColorPickerRenderer</rendererClass>
	<parent>javax.faces.component.UIInput</parent>
	<attributes>
		&input_component_attributes;
		&widget_var_attribute;
		<attribute>
			<name>header</name>
			<required>false</required>
			<type>java.lang.String</type>
			<defaultValue>Choose a color</defaultValue>
			<description>Header text for the color picker title.</description>
		</attribute>
		<attribute>
			<name>modal</name>
			<required>false</required>
			<type>java.lang.Boolean</type>
			<defaultValue>false</defaultValue>
			<description>Modality of the colorpicker dialog.</description>
		</attribute>
		<attribute>
			<name>showControls</name>
			<required>false</required>
			<type>java.lang.Boolean</type>
			<defaultValue>true</defaultValue>
			<description>Sets visibility of whole set of controls.</description>
		</attribute>
		<attribute>
			<name>showHexControls</name>
			<required>false</required>
			<type>java.lang.Boolean</type>
			<defaultValue>true</defaultValue>
			<description>Sets visibility of hex controls.</description>
		</attribute>
		<attribute>
			<name>showHexSummary</name>
			<required>false</required>
			<type>java.lang.Boolean</type>
			<defaultValue>true</defaultValue>
			<description>Sets visibility of hex summary.</description>
		</attribute>
		<attribute>
			<name>showHsvControls</name>
			<required>false</required>
			<type>java.lang.Boolean</type>
			<defaultValue>false</defaultValue>
			<description>Sets visibility of hsv controls.</description>
		</attribute>
		<attribute>
			<name>showRGBControls</name>
			<required>false</required>
			<type>java.lang.Boolean</type>
			<defaultValue>true</defaultValue>
			<description>Sets visibility of rgb controls.</description>
		</attribute>
		<attribute>
			<name>showWebSafe</name>
			<required>false</required>
			<type>java.lang.Boolean</type>
			<defaultValue>true</defaultValue>
			<description>Sets visibility of web safe controls.</description>
		</attribute>
	</attributes>
	<resources>
		<resource>
			<name>/yui/slider/assets/skins/sam/slider.css</name>
		</resource>
		<resource>
			<name>/yui/fonts/fonts-min.css</name>
		</resource>
		<resource>
			<name>/yui/container/assets/skins/sam/container.css</name>
		</resource>
		<resource>
			<name>/yui/button/assets/skins/sam/button.css</name>
		</resource>
		<resource>
			<name>/yui/colorpicker/assets/skins/sam/colorpicker.css</name>
		</resource>
		<resource>
			<name>/yui/utilities/utilities.js</name>
		</resource>
		<resource>
			<name>/yui/slider/slider-min.js</name>
		</resource>
		<resource>
			<name>/yui/container/container-min.js</name>
		</resource>
		<resource>
			<name>/yui/button/button-min.js</name>
		</resource>
		<resource>
			<name>/yui/colorpicker/colorpicker-min.js</name>
		</resource>
		<resource>
			<name>/yuiext/colorpicker/colorpicker.js</name>
		</resource>
	</resources>
</component>