<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE component SYSTEM "../misc/component.dtd" [
<!ENTITY standard_uicomponent_attributes		SYSTEM "../entities/standard_uicomponent_attributes.xml">
<!ENTITY input_component_attributes				SYSTEM "../entities/input_component_attributes.xml">
<!ENTITY widget_var_attribute					SYSTEM "../entities/widget_var_attribute.xml">
]>
<component>
	<tag>rating</tag>
	<tagClass>org.primefaces.ui.component.rating.RatingTag</tagClass>
	<componentHandlerClass>org.primefaces.ui.component.rating.RatingHandler</componentHandlerClass>
	<componentClass>org.primefaces.ui.component.rating.Rating</componentClass>
	<componentType>org.primefaces.ui.Rating</componentType>
	<componentFamily>org.primefaces.ui</componentFamily>
	<rendererType>org.primefaces.ui.component.RatingRenderer</rendererType>
	<rendererClass>org.primefaces.ui.component.rating.RatingRenderer</rendererClass>
	<parent>javax.faces.component.UIInput</parent>
	<attributes>
		&standard_uicomponent_attributes;
		&input_component_attributes;
		<attribute>
			<name>stars</name>
			<required>false</required>
			<type>java.lang.Integer</type>
			<defaultValue>5</defaultValue>
			<description>
				Number of stars to display.
			</description>
		</attribute>
		<attribute>
			<name>rateListener</name>
			<required>false</required>
			<type>javax.el.MethodExpression</type>
			<method-signature>void rateListener(org.primefaces.ui.event.rating.RateEvent)</method-signature>
			<description>A server side listener to process a RateEvent</description>
		</attribute>
		<attribute>
			<name>update</name>
			<required>false</required>
			<type>java.lang.String</type>
			<description>
				Client side id of the component(s) to be updated after async partial submit request.
			</description>
		</attribute>
		<attribute>
			<name>disabled</name>
			<required>false</required>
			<type>java.lang.Boolean</type>
			<defaultValue>false</defaultValue>
			<description>
				Disables the user interaction, used for displaying the value only.
			</description>
		</attribute>
	</attributes>
	<resources>
		<resource>
			<name>/yui/utilities/utilities.js</name>
		</resource>
		<resource>
			<name>/jquery/jquery.js</name>
		</resource>
		<resource>
			<name>/jquery/plugins/rating/jquery.rating.css</name>
		</resource>
		<resource>
			<name>/jquery/plugins/rating/jquery.rating.pack.js</name>
		</resource>
		<resource>
			<name>/primefaces/ajax/ajax.js</name>
		</resource>
		<resource>
			<name>/primefaces/rating/rating.js</name>
		</resource>
	</resources>
</component>
