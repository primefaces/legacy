<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE component SYSTEM "../misc/component.dtd" [
<!ENTITY standard_uicomponent_attributes		SYSTEM "../entities/standard_uicomponent_attributes.xml">
<!ENTITY output_component_attributes			SYSTEM "../entities/output_component_attributes.xml">
]>
<component>
	<tag>fileFilter</tag>
	<tagClass>org.primefaces.ui.component.fileupload.FileFilterTag</tagClass>
	<componentClass>org.primefaces.ui.component.fileupload.FileFilter</componentClass>
	<componentType>org.primefaces.ui.fileupload.FileFilter</componentType>
	<componentFamily>org.primefaces.ui</componentFamily>
	<parent>javax.faces.component.UIComponentBase</parent>
	<attributes>
		&standard_uicomponent_attributes;
		<attribute>
			<name>name</name>
			<required>true</required>
			<type>java.lang.String</type>
			<description>Name of filter group, eg "Images"</description>
		</attribute>
		<attribute>
			<name>extensions</name>
			<required>false</required>
			<type>java.lang.String</type>
			<description>Semi colon seperated list of file extensions, eg. "*.jpg;*.gif"</description>
		</attribute>
	</attributes>
</component>