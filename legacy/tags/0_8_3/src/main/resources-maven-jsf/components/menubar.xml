<!DOCTYPE component SYSTEM "../misc/component.dtd" [
<!ENTITY standard_uicomponent_attributes		SYSTEM "../entities/standard_uicomponent_attributes.xml">
<!ENTITY container_component_attributes			SYSTEM "../entities/container_attributes.xml">
<!ENTITY widget_var_attribute					SYSTEM "../entities/widget_var_attribute.xml">
]>
<component>
	<tag>menubar</tag>
	<tagClass>org.primefaces.ui.component.menubar.MenubarTag</tagClass>
	<componentClass>org.primefaces.ui.component.menubar.Menubar</componentClass>
	<componentType>org.primefaces.ui.Menubar</componentType>
	<componentFamily>org.primefaces</componentFamily>
	<rendererType>org.primefaces.ui.component.MenubarRenderer</rendererType>
	<rendererClass>org.primefaces.ui.component.menubar.MenubarRenderer</rendererClass>
	<parent>javax.faces.component.UIComponentBase</parent>
	<attributes>
		&standard_uicomponent_attributes;
		&widget_var_attribute;
		<attribute>
			<name>autoSubmenuDisplay</name>
			<required>false</required>
			<type>java.lang.Boolean</type>
			<defaultValue>false</defaultValue>
			<description>
				When set to true, submenus are displayed on mouseover of a menuitem.
			</description>
		</attribute>
		<attribute>
			<name>effect</name>
			<required>false</required>
			<type>java.lang.String</type>
			<defaultValue>FADE</defaultValue>
			<description>
				Sets the effect for the menu display, default value is "FADE". Possible values are "FADE", "SLIDE", "NONE". Use "NONE" to disable animation at all.
			</description>
		</attribute>
		<attribute>
			<name>effectDuration</name>
			<required>false</required>
			<type>java.lang.Double</type>
			<defaultValue>0.25</defaultValue>
			<description>
				Sets the effect for the menu display
			</description>
		</attribute>
	</attributes>
	<resources>
		<resource>
			<name>/yui/menu/assets/skins/sam/menu.css</name>
		</resource>
		<resource>
			<name>/yui/utilities/utilities.js</name>
		</resource>
		<resource>
			<name>/yui/container/container_core-min.js</name>
		</resource>
		<resource>
			<name>/yui/menu/menu-min.js</name>
		</resource>
	</resources>
</component>
