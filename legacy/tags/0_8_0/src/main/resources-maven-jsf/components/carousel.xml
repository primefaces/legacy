<!DOCTYPE component SYSTEM "../misc/component.dtd" [
<!ENTITY standard_uicomponent_attributes		SYSTEM "../entities/standard_uicomponent_attributes.xml">
<!ENTITY container_component_attributes			SYSTEM "../entities/container_attributes.xml">
<!ENTITY widget_var_attribute					SYSTEM "../entities/widget_var_attribute.xml">
]>
<component>
	<tag>carousel</tag>
	<tagClass>org.primefaces.ui.component.carousel.CarouselTag</tagClass>
	<componentClass>org.primefaces.ui.component.carousel.Carousel</componentClass>
	<componentType>org.primefaces.ui.Carousel</componentType>
	<componentFamily>org.primefaces</componentFamily>
	<rendererType>org.primefaces.ui.component.CarouselRenderer</rendererType>
	<rendererClass>org.primefaces.ui.component.carousel.CarouselRenderer</rendererClass>
	<parent>javax.faces.component.UIPanel</parent>
	<attributes>
		&standard_uicomponent_attributes;
		&widget_var_attribute;
		<attribute>
			<name>numVisible</name>
			<required>false</required>
			<type>java.lang.Integer</type>
			<defaultValue>3</defaultValue>
			<description>Number of visible items</description>
		</attribute>
		<attribute>
			<name>firstVisible</name>
			<required>false</required>
			<type>java.lang.Integer</type>
			<defaultValue>0</defaultValue>
			<description>Index of the first element to be displayed</description>
		</attribute>
		<attribute>
			<name>selectedItem</name>
			<required>false</required>
			<type>java.lang.Integer</type>
			<defaultValue>0</defaultValue>
			<description>Index of the selected item</description>
		</attribute>
		<attribute>
			<name>scrollIncrement</name>
			<required>false</required>
			<type>java.lang.Integer</type>
			<defaultValue>1</defaultValue>
			<description>Number of items to scroll</description>
		</attribute>
		<attribute>
			<name>circular</name>
			<required>false</required>
			<type>java.lang.Boolean</type>
			<defaultValue>false</defaultValue>
			<description>When true, enables continous scrolling, default is false</description>
		</attribute>
		<attribute>
			<name>vertical</name>
			<required>false</required>
			<type>java.lang.Boolean</type>
			<defaultValue>false</defaultValue>
			<description>Set vertical orientation, default is false</description>
		</attribute>
		<attribute>
			<name>autoplay</name>
			<required>false</required>
			<type>java.lang.Integer</type>
			<defaultValue>0</defaultValue>
			<description>Set this time in milli-seconds to have the Carousel scroll the elements automatically</description>
		</attribute>
		<attribute>
			<name>revealAmount</name>
			<required>false</required>
			<type>java.lang.Integer</type>
			<defaultValue>0</defaultValue>
			<description>The percentage of the item to be revealed on each side of the Carousel</description>
		</attribute>
		<attribute>
			<name>animate</name>
			<required>false</required>
			<type>java.lang.Boolean</type>
			<defaultValue>true</defaultValue>
			<description>When enabled scrolling is animated, animation is turned on by default</description>
		</attribute>
		<attribute>
			<name>speed</name>
			<required>false</required>
			<type>java.lang.Double</type>
			<defaultValue>0.5</defaultValue>
			<description>Sets the speed of the scrolling animation, default is 0.5</description>
		</attribute>
		<attribute>
			<name>effect</name>
			<required>false</required>
			<type>java.lang.String</type>
			<description>Sets the animation effect</description>
		</attribute>
		<attribute>
			<name>value</name>
			<required>true</required>
			<type>java.lang.Object</type>
			<ignoreInComponent>false</ignoreInComponent>
			<description>
				A collection instance referenced by an expression
			</description>
		</attribute>
		<attribute>
			<name>var</name>
			<required>true</required>
			<type>java.lang.String</type>
			<ignoreInComponent>false</ignoreInComponent>
			<description>
				Name of the request-scoped variable that'll be used as a reference before rendering a child component
			</description>
		</attribute>
	</attributes>
	<resources>
		<resource>
			<name>/yui/carousel/assets/skins/sam/carousel.css</name>
		</resource>
		<resource>
			<name>/yui/utilities/utilities.js</name>
		</resource>
		<resource>
			<name>/yui/carousel/carousel-beta-min.js</name>
		</resource>
	</resources>
</component>