<!DOCTYPE component SYSTEM "../misc/component.dtd" [
<!ENTITY standard_uicomponent_attributes		SYSTEM "../entities/standard_uicomponent_attributes.xml">
<!ENTITY widget_var_attribute					SYSTEM "../entities/widget_var_attribute.xml">
]>
<component>
	<tag>tree</tag>
	<tagClass>org.primefaces.ui.component.tree.TreeTag</tagClass>
	<componentHandlerClass>org.primefaces.ui.component.tree.TreeHandler</componentHandlerClass>
	<componentClass>org.primefaces.ui.component.tree.Tree</componentClass>
	<componentType>org.primefaces.ui.Tree</componentType>
	<componentFamily>org.primefaces</componentFamily>
	<rendererType>org.primefaces.ui.component.TreeRenderer</rendererType>
	<rendererClass>org.primefaces.ui.component.tree.TreeRenderer</rendererClass>
	<parent>javax.faces.component.UIComponentBase</parent>
	<ajaxComponent>true</ajaxComponent>
	<attributes>
		&standard_uicomponent_attributes;
		&widget_var_attribute;
		<attribute>
			<name>value</name>
			<required>false</required>
			<type>java.lang.Object</type>
			<description>TreeNode instance to model the tree</description>
		</attribute>
		<attribute>
			<name>toggleMode</name>
			<required>false</required>
			<type>java.lang.String</type>
			<defaultValue>async</defaultValue>
			<description>Specifies the toggleMode, valid values are "client" or "async"(default)</description>
		</attribute>
		<attribute>
			<name>expandAnim</name>
			<required>false</required>
			<type>java.lang.String</type>
			<description>Animation to be displayed on node expand, valid values are "FADE_IN" or "FADE_OUT"</description>
		</attribute>
		<attribute>
			<name>collapseAnim</name>
			<required>false</required>
			<type>java.lang.String</type>
			<description>Animation to be displayed on node collapse, valid values are "FADE_IN" or "FADE_OUT"</description>
		</attribute>
		<attribute>
			<name>nodeSelectListener</name>
			<required>false</required>
			<type>javax.el.MethodExpression</type>
			<description>Method expression to listen node select events</description>
		</attribute>
		<attribute>
			<name>nodeExpandListener</name>
			<required>false</required>
			<type>javax.el.MethodExpression</type>
			<description>Method expression to listen node expand events</description>
		</attribute>
		<attribute>
			<name>nodeCollapseListener</name>
			<required>false</required>
			<type>javax.el.MethodExpression</type>
			<description>Method expression to listen node collapse events</description>
		</attribute>
	</attributes>
	<resources>
		<resource>
			<name>/yui/treeview/assets/skins/sam/treeview.css</name>
		</resource>
		<resource>
			<name>/yui/utilities/utilities.js</name>
		</resource>
		<resource>
			<name>/prototype/prototype.js</name>
		</resource>
		<resource>
			<name>/primefaces/ajax/ajax.js</name>
		</resource>
		<resource>
			<name>/yui/cookie/cookie-min.js</name>
		</resource>
		<resource>
			<name>/yui/treeview/treeview-min.js</name>
		</resource>
		<resource>
			<name>/yuiext/treeview/treeview.js</name>
		</resource>
	</resources>
</component>
