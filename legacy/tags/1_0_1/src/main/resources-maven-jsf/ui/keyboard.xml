<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE component SYSTEM "../misc/component.dtd" [
<!ENTITY standard_uicomponent_attributes		SYSTEM "../entities/standard_uicomponent_attributes.xml">
<!ENTITY output_component_attributes			SYSTEM "../entities/output_component_attributes.xml">
<!ENTITY input_component_attributes				SYSTEM "../entities/input_component_attributes.xml">
<!ENTITY html_input_text_attributes				SYSTEM "../entities/html_input_text_attributes.xml">
<!ENTITY widget_var_attribute					SYSTEM "../entities/widget_var_attribute.xml">
]>
<component>
	<tag>keyboard</tag>
	<tagClass>org.primefaces.component.keyboard.KeyboardTag</tagClass>
	<componentClass>org.primefaces.component.keyboard.Keyboard</componentClass>
	<componentType>org.primefaces.component.Keyboard</componentType>
	<componentFamily>org.primefaces.component</componentFamily>
	<rendererType>org.primefaces.component.KeyboardRenderer</rendererType>
	<rendererClass>org.primefaces.component.keyboard.KeyboardRenderer</rendererClass>
	<parent>javax.faces.component.html.HtmlInputText</parent>
	<attributes>
		&input_component_attributes;
		&html_input_text_attributes;
		&widget_var_attribute;
		<attribute>
			<name>password</name>
			<required>false</required>
			<type>java.lang.Boolean</type>
			<defaultValue>false</defaultValue>
			<description>Displays a password text when enabled.</description>
		</attribute>
		<attribute>
			<name>showMode</name>
			<required>false</required>
			<type>java.lang.String</type>
			<defaultValue>focus</defaultValue>
			<description>Specifies the display mode, 'focus','button','both'.</description>
		</attribute>
		<attribute>
			<name>buttonImage</name>
			<required>false</required>
			<type>java.lang.String</type>
			<description>Image of the button trigger that displays the keyboard.</description>
		</attribute>
		<attribute>
			<name>buttonImageOnly</name>
			<required>false</required>
			<type>java.lang.Boolean</type>
			<defaultValue>false</defaultValue>
			<description>When set to true only image of the button is displayed.</description>
		</attribute>
		<attribute>
			<name>effect</name>
			<required>false</required>
			<type>java.lang.String</type>
			<defaultValue>fadeIn</defaultValue>
			<description>Effect of the display animation.</description>
		</attribute>
		<attribute>
			<name>effectDuration</name>
			<required>false</required>
			<type>java.lang.String</type>
			<description>Length of the display animation.</description>
		</attribute>
		<attribute>
			<name>layout</name>
			<required>false</required>
			<type>java.lang.String</type>
			<defaultValue>qwerty</defaultValue>
			<description>Layout the of the keyboard, can be 'qwerty','alphabetic' or custom.</description>
		</attribute>
		<attribute>
			<name>layoutTemplate</name>
			<required>false</required>
			<type>java.lang.String</type>
			<description>Template of the custom layout.</description>
		</attribute>
		<attribute>
			<name>keypadOnly</name>
			<required>false</required>
			<type>java.lang.Boolean</type>
			<defaultValue>false</defaultValue>
			<description>When set to true, a keypad will be displayed instead of the whole keyboard.</description>
		</attribute>
		<attribute>
			<name>promptLabel</name>
			<required>false</required>
			<type>java.lang.String</type>
			<description>Label for the prompt text.</description>
		</attribute>
		<attribute>
			<name>closeLabel</name>
			<required>false</required>
			<type>java.lang.String</type>
			<description>Label for the close key.</description>
		</attribute>
		<attribute>
			<name>clearLabel</name>
			<required>false</required>
			<type>java.lang.String</type>
			<description>Label for the clear key.</description>
		</attribute>
		<attribute>
			<name>backspaceLabel</name>
			<required>false</required>
			<type>java.lang.String</type>
			<description>Label for the backspace key.</description>
		</attribute>
	</attributes>
	<resources>
		<resource>
			<name>/yui/utilities/utilities.js</name>
		</resource>
		<resource>
			<name>/jquery/jquery.js</name>
		</resource>
		<resource>
			<name>/jquery/plugins/effects/effects.js</name>
		</resource>
		<resource>
			<name>/jquery/plugins/keyboard/keypad.css</name>
		</resource>
		<resource>
			<name>/jquery/plugins/keyboard/keypad.min.js</name>
		</resource>
		<resource>
			<name>/primefaces/core/core.js</name>
		</resource>
		<resource>
			<name>/primefaces/keyboard/keyboard.js</name>
		</resource>
	</resources>
</component>